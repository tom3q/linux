/dts-v1/;
#include <dt-bindings/input/input.h>
#include "s5p6442.dtsi"

/ {
	model = "Samsung Galaxy Apollo";
	compatible = "samsung,apollo", "samsung,s5p6442";

	chosen {
		bootargs = "console=ttySAC1,115200n8 root=/dev/mmcblk0p1 rw rootwait ignore_loglevel earlyprintk";
	};

	memory {
		device_type = "memory";
		reg = <0x20000000 0x10000000
			0x40000000 0x5000000>;
	};

	fixed-clocks {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		xusbxti: oscillator@0 {
			compatible = "fixed-clock";
			reg = <0>;
			clock-output-names = "xusbxti";
			clock-frequency = <12000000>;
			#clock-cells = <0>;
		};
	};
};

&uart2 {
	status = "okay";
};

&sdhci2 {
	bus-width = <4>;
	cd-gpios = <&gph2 0 1>;
	cd-inverted;
	pinctrl-0 = <&sd2_clk &sd2_cmd &sd2_bus4>;
	pinctrl-names = "default";
	status = "okay";
};
